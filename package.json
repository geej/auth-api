{
  "name": "auth-api",
  "version": "0.0.1",
  "description": "Serverless SSO using OAuth 2.0 and JWT",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "lint": "eslint src/**",
    "test": "jest src/",
    "watch": "nodemon --watch src --exec npm start",
    "start": "npm run build && sls offline start --jwt_issuer ${JWT_ISSUER} --jwt_secret ${JWT_SECRET}",
    "deploy": "npm run build && sls deploy --jwt_issuer ${JWT_ISSUER} --jwt_secret ${JWT_SECRET}"
  },
  "author": "geej",
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "ajv": "^6.5.0",
    "aws-sdk": "^2.233.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "cookie": "^0.3.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "handlebars": "^4.0.11",
    "handlebars-loader": "^1.7.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.4",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-offline": "^3.20.3",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3"
  },
  "jest": {
    "coverageDirectory": "test/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
